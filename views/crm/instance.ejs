<!-- Bandeja de Entrada para Instancia Específica -->
<div class="crm-conversations bg-white border-r border-gray-200 flex flex-col">
    <!-- Header de conversaciones -->
    <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between mb-4">
            <h2 class="font-semibold text-lg text-gray-900">
                <%= instance.numberName %>
                <span class="text-sm font-normal text-gray-500">- Conversaciones</span>
            </h2>
            <div class="flex items-center space-x-2">
                <span class="status-badge <%= instance.status === 'connected' ? 'status-inbox' : 'status-pending' %>">
                    <%= instance.status === 'connected' ? 'Conectado' : instance.status.charAt(0).toUpperCase() + instance.status.slice(1) %>
                </span>
                <button onclick="refreshConversations()" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100">
                    <i class="fas fa-sync-alt"></i>
                </button>
            </div>
        </div>

        <!-- Pestañas de estado -->
        <div class="flex space-x-1">
            <button class="tab-button active px-3 py-2 text-sm font-medium rounded-lg bg-blue-100 text-blue-700" data-status="inbox">
                Entrada <span class="count-badge ml-1 px-2 py-0.5 bg-blue-200 text-blue-800 rounded-full text-xs">0</span>
            </button>
            <button class="tab-button px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100" data-status="pending">
                Esperando <span class="count-badge ml-1 px-2 py-0.5 bg-gray-200 text-gray-800 rounded-full text-xs">0</span>
            </button>
            <button class="tab-button px-3 py-2 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100" data-status="closed">
                Finalizados <span class="count-badge ml-1 px-2 py-0.5 bg-gray-200 text-gray-800 rounded-full text-xs">0</span>
            </button>
        </div>
    </div>

    <!-- Barra de búsqueda -->
    <div class="p-4 border-b border-gray-200">
        <div class="relative">
            <input type="text" id="searchInput" placeholder="Buscar conversaciones..." 
                   class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-search text-gray-400"></i>
            </div>
        </div>
    </div>

    <!-- Lista de conversaciones -->
    <div class="flex-1 overflow-y-auto custom-scrollbar">
        <div id="conversationsList" class="divide-y divide-gray-200">
            <!-- Loading state -->
            <div id="loadingState" class="p-8 text-center text-gray-500">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
                <p>Cargando conversaciones...</p>
            </div>
            
            <!-- Estado vacío -->
            <div id="emptyState" class="hidden p-8 text-center text-gray-500">
                <i class="fas fa-comments text-4xl mb-4 text-gray-300"></i>
                <p class="text-lg font-medium mb-2">No hay conversaciones</p>
                <p class="text-sm">No hay conversaciones en esta categoría</p>
            </div>
        </div>
    </div>
</div>

<!-- Visor de Chat -->
<div class="crm-chat bg-white flex flex-col">
    <!-- Estado vacío del chat -->
    <div id="emptyChatState" class="flex-1 flex items-center justify-center">
        <div class="text-center">
            <div class="w-24 h-24 mx-auto mb-6 bg-gray-100 rounded-full flex items-center justify-center">
                <i class="fas fa-comment-dots text-3xl text-gray-400"></i>
            </div>
            <h3 class="text-xl font-medium text-gray-900 mb-2">Selecciona una conversación</h3>
            <p class="text-gray-500 max-w-sm">
                Elige una conversación de la lista para ver los mensajes y gestionar la comunicación con tus clientes.
            </p>
        </div>
    </div>

    <!-- Vista de conversación (inicialmente oculta) -->
    <div id="chatView" class="hidden flex-1 flex flex-col">
        <!-- Header del chat -->
        <div class="p-4 border-b border-gray-200 bg-white">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                        <i class="fas fa-user text-gray-600"></i>
                    </div>
                    <div>
                        <h3 id="contactName" class="font-medium text-gray-900">Nombre del contacto</h3>
                        <p id="contactPhone" class="text-sm text-gray-500">+1234567890</p>
                    </div>
                </div>
                
                <div class="flex items-center space-x-3">
                    <!-- Estado de la conversación -->
                    <span id="conversationStatus" class="status-badge status-inbox">Entrada</span>
                    
                    <!-- Menú de acciones -->
                    <div class="relative">
                        <button id="actionsMenu" class="p-2 text-gray-400 hover:text-gray-600 rounded-lg hover:bg-gray-100">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        
                        <!-- Dropdown del menú -->
                        <div id="actionsDropdown" class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 z-10">
                            <div class="py-1">
                                <button class="assign-conversation w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-user-plus mr-2"></i>
                                    Asignar agente
                                </button>
                                <button class="change-status w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" data-status="pending">
                                    <i class="fas fa-clock mr-2"></i>
                                    Marcar como pendiente
                                </button>
                                <button class="change-status w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" data-status="closed">
                                    <i class="fas fa-check mr-2"></i>
                                    Finalizar conversación
                                </button>
                                <div class="border-t border-gray-200"></div>
                                <button class="manage-tags w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <i class="fas fa-tags mr-2"></i>
                                    Gestionar etiquetas
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Etiquetas de la conversación -->
            <div id="conversationTags" class="mt-3 flex flex-wrap gap-2">
                <!-- Las etiquetas se cargan dinámicamente -->
            </div>
            
            <!-- Agente asignado -->
            <div id="assignedAgent" class="mt-2 hidden">
                <span class="text-xs text-gray-500">Asignado a:</span>
                <span id="agentName" class="text-xs font-medium text-gray-700 ml-1"></span>
            </div>
        </div>

        <!-- Pestañas de contenido -->
        <div class="border-b border-gray-200">
            <nav class="flex space-x-8 px-4">
                <button class="content-tab active py-3 px-1 border-b-2 border-blue-500 font-medium text-sm text-blue-600" data-tab="messages">
                    Mensajes
                </button>
                <button class="content-tab py-3 px-1 border-b-2 border-transparent font-medium text-sm text-gray-500 hover:text-gray-700 hover:border-gray-300" data-tab="notes">
                    Notas <span id="notesCount" class="ml-1 bg-gray-200 text-gray-600 py-0.5 px-2 rounded-full text-xs">0</span>
                </button>
            </nav>
        </div>

        <!-- Contenido de mensajes -->
        <div id="messagesTab" class="flex-1 flex flex-col">
            <!-- Área de mensajes -->
            <div class="flex-1 overflow-y-auto custom-scrollbar p-4 space-y-4" id="messagesArea">
                <!-- Los mensajes se cargan dinámicamente -->
            </div>

            <!-- Input para enviar mensajes -->
            <div class="border-t border-gray-200 p-4">
                <div class="flex space-x-3">
                    <input type="text" id="messageInput" placeholder="Escribe un mensaje..." 
                           class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <button id="sendMessage" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Contenido de notas -->
        <div id="notesTab" class="hidden flex-1 flex flex-col">
            <!-- Área de notas -->
            <div class="flex-1 overflow-y-auto custom-scrollbar p-4 space-y-4" id="notesArea">
                <!-- Las notas se cargan dinámicamente -->
            </div>

            <!-- Input para añadir notas -->
            <div class="border-t border-gray-200 p-4">
                <div class="space-y-3">
                    <textarea id="noteInput" placeholder="Añadir nota interna..." 
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 resize-none"
                              rows="3"></textarea>
                    <div class="flex items-center justify-between">
                        <label class="flex items-center">
                            <input type="checkbox" id="noteImportant" class="rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <span class="ml-2 text-sm text-gray-700">Marcar como importante</span>
                        </label>
                        <button id="addNote" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">
                            Añadir nota
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modales (iguales que en la vista principal) -->

<!-- Modal de asignación de agente -->
<div id="assignModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Asignar conversación</h3>
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Seleccionar agente</label>
                <select id="agentSelect" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Sin asignar</option>
                    <% if (typeof users !== 'undefined' && users.length > 0) { %>
                        <% users.forEach(user => { %>
                            <option value="<%= user.id %>"><%= user.displayName %> (<%= user.email %>)</option>
                        <% }); %>
                    <% } %>
                </select>
            </div>
            <div class="flex justify-end space-x-3">
                <button id="cancelAssign" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Cancelar
                </button>
                <button id="confirmAssign" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Asignar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal de gestión de etiquetas -->
<div id="tagsModal" class="hidden fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-50">
    <div class="relative top-20 mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Gestionar etiquetas</h3>
            
            <!-- Etiquetas actuales -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Etiquetas actuales</label>
                <div id="currentTags" class="flex flex-wrap gap-2 min-h-[2rem] p-2 border border-gray-200 rounded-lg">
                    <!-- Las etiquetas se cargan dinámicamente -->
                </div>
            </div>
            
            <!-- Etiquetas disponibles -->
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Etiquetas disponibles</label>
                <div id="availableTags" class="max-h-32 overflow-y-auto border border-gray-200 rounded-lg p-2">
                    <!-- Las etiquetas se cargan dinámicamente -->
                </div>
            </div>
            
            <div class="flex justify-end space-x-3">
                <button id="cancelTags" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                    Cancelar
                </button>
                <button id="saveTags" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
                    Guardar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Configuración específica para esta instancia
window.currentInstanceId = <%= instance.id %>;

// Función para refrescar conversaciones
function refreshConversations() {
    if (window.crm) {
        window.crm.loadConversations();
    }
}

// Inicializar cuando el DOM esté listo
document.addEventListener('DOMContentLoaded', function() {
    // El CRM Manager se inicializa automáticamente desde crm.js
    console.log('🏗️ Vista de instancia CRM lista para instancia:', window.currentInstanceId);
});
</script>
