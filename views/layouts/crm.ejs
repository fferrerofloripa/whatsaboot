    <style>
        /* Estilos personalizados para CRM */
        .crm-sidebar {
            width: 280px;
            min-width: 280px;
        }
        
        .crm-conversations {
            width: 380px;
            min-width: 380px;
        }
        
        .crm-chat {
            flex: 1;
            min-width: 0;
        }

        .conversation-item:hover {
            background-color: #f8fafc;
        }

        .conversation-item.active {
            background-color: #eff6ff;
            border-left: 4px solid #3b82f6;
        }

        .tag-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.125rem 0.5rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 500;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
        }

        .status-inbox { background-color: #dbeafe; color: #1d4ed8; }
        .status-pending { background-color: #fef3c7; color: #d97706; }
        .status-closed { background-color: #dcfce7; color: #16a34a; }

        .message-bubble {
            max-width: 85%;
            word-wrap: break-word;
        }

        .message-incoming {
            background-color: #f3f4f6;
            margin-right: auto;
        }

        .message-outgoing {
            background-color: #3b82f6;
            color: white;
            margin-left: auto;
        }

        /* Scrollbar personalizado */
        .custom-scrollbar::-webkit-scrollbar {
            width: 6px;
        }

        .custom-scrollbar::-webkit-scrollbar-track {
            background: #f1f5f9;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

        .custom-scrollbar::-webkit-scrollbar-thumb:hover {
            background: #94a3b8;
        }
    </style>
</head>
<body class="bg-gray-50 h-screen overflow-hidden">
    <div class="flex h-screen">
        <!-- Sidebar de Navegación -->
        <div class="crm-sidebar bg-white border-r border-gray-200 flex flex-col">
            <!-- Header del sidebar -->
            <div class="p-4 border-b border-gray-200">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                        <i class="fab fa-whatsapp text-white text-lg"></i>
                    </div>
                    <div>
                        <h1 class="font-bold text-lg text-gray-900">WhatsaBoot</h1>
                        <p class="text-xs text-gray-500">CRM System</p>
                    </div>
                </div>
            </div>

            <!-- Navegación principal -->
            <nav class="flex-1 p-4">
                <ul class="space-y-2">
                    <li>
                        <a href="/crm" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100 <%= currentPath === '/crm' ? 'bg-blue-50 text-blue-700' : '' %>">
                            <i class="fas fa-comments w-5"></i>
                            <span>Conversaciones</span>
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-robot w-5"></i>
                            <span>Bot Manager</span>
                        </a>
                    </li>
                    <li>
                        <a href="/crm/contacts" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-address-book w-5"></i>
                            <span>Contactos</span>
                        </a>
                    </li>
                    <li>
                        <a href="/crm/analytics" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-chart-bar w-5"></i>
                            <span>Analíticas</span>
                        </a>
                    </li>
                    <li>
                        <a href="/crm/settings" class="flex items-center space-x-3 px-3 py-2 rounded-lg text-gray-700 hover:bg-gray-100">
                            <i class="fas fa-cog w-5"></i>
                            <span>Configuración</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Selector de instancia -->
            <div class="border-t border-gray-200 p-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Instancia de WhatsApp</label>
                <select id="instanceSelector" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-sm">
                    <option value="">Seleccionar instancia...</option>
                    <% if (typeof instances !== 'undefined' && instances.length > 0) { %>
                        <% instances.forEach(instance => { %>
                            <option value="<%= instance.id %>" <%= (typeof selectedInstance !== 'undefined' && selectedInstance && selectedInstance.id === instance.id) ? 'selected' : '' %>>
                                <%= instance.numberName %> - <%= instance.status %>
                            </option>
                        <% }); %>
                    <% } %>
                </select>
            </div>

            <!-- Usuario actual -->
            <div class="border-t border-gray-200 p-4">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-blue-600 rounded-full flex items-center justify-center">
                        <span class="text-white text-sm font-medium">
                            <%= user.displayName.charAt(0).toUpperCase() %>
                        </span>
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate">
                            <%= user.displayName %>
                        </p>
                        <p class="text-xs text-gray-500 truncate">
                            <%= user.email %>
                        </p>
                    </div>
                    <a href="/auth/logout" class="text-gray-400 hover:text-gray-600">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="flex-1 flex min-w-0">
            <%- body %>
        </div>
    </div>

    <!-- Socket.IO -->
    <script src="/socket.io/socket.io.js"></script>
    
    <!-- Scripts principales del CRM -->
    <script src="/js/crm.js"></script>
    
    <!-- Scripts específicos de página -->
    <%- script %>

    <!-- Script para selector de instancia -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const instanceSelector = document.getElementById('instanceSelector');
            if (instanceSelector) {
                instanceSelector.addEventListener('change', function() {
                    const instanceId = this.value;
                    if (instanceId) {
                        window.location.href = `/crm/instance/${instanceId}`;
                    } else {
                        window.location.href = '/crm';
                    }
                });
            }
        });
    </script>
</body>
</html>
