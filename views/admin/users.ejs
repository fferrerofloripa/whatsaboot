<div class="space-y-6">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex items-center justify-between">
            <div>
                <nav class="flex items-center space-x-2 text-sm text-gray-500 mb-2">
                    <a href="/admin" class="hover:text-gray-700">Administración</a>
                    <i class="fas fa-chevron-right text-xs"></i>
                    <span class="text-gray-900">Usuarios</span>
                </nav>
                <h1 class="text-2xl font-bold text-gray-900">Gestión de Usuarios</h1>
                <p class="text-gray-600 mt-1">Administrar usuarios del sistema y sus permisos</p>
            </div>
            <div class="flex items-center space-x-4">
                <span class="text-sm text-gray-600">
                    Total: <span class="font-semibold"><%= users.length %></span> usuario(s)
                </span>
            </div>
        </div>
    </div>
    
    <!-- Users Table -->
    <div class="bg-white rounded-lg shadow-sm">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-lg font-semibold text-gray-900">Lista de Usuarios</h2>
                <div class="flex items-center space-x-4">
                    <div class="relative">
                        <input type="text" id="searchUsers" placeholder="Buscar usuarios..." 
                               class="pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
                        <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rol</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Instancias</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Último Acceso</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200" id="usersTableBody">
                    <% users.forEach(function(user) { %>
                        <tr class="hover:bg-gray-50 user-row" data-user-email="<%= user.email.toLowerCase() %>" data-user-name="<%= user.displayName.toLowerCase() %>">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <img src="<%= user.avatar || '/images/default-avatar.png' %>" 
                                         alt="Avatar" class="w-10 h-10 rounded-full">
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900"><%= user.displayName %></div>
                                        <div class="text-sm text-gray-500"><%= user.email %></div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                       <%= user.role === 'admin' ? 'bg-purple-100 text-purple-800' : 'bg-gray-100 text-gray-800' %>">
                                    <% if (user.role === 'admin') { %>
                                        <i class="fas fa-crown mr-1"></i>
                                        Administrador
                                    <% } else { %>
                                        <i class="fas fa-user mr-1"></i>
                                        Usuario
                                    <% } %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                <div class="flex items-center">
                                    <i class="fas fa-mobile-alt mr-2 text-gray-400"></i>
                                    <%= user.whatsappInstances ? user.whatsappInstances.length : 0 %>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                                       <%= user.isActive ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                                    <i class="fas fa-circle mr-1" style="font-size: 6px;"></i>
                                    <%= user.isActive ? 'Activo' : 'Inactivo' %>
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <% if (user.lastLogin) { %>
                                    <%= new Date(user.lastLogin).toLocaleString('es-ES') %>
                                <% } else { %>
                                    <span class="text-gray-400">Nunca</span>
                                <% } %>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <div class="flex items-center space-x-2">
                                    <!-- Change Role Button -->
                                    <% if (user.id !== user.id) { // This will be replaced with actual current user check %>
                                        <button onclick="changeUserRole(<%= user.id %>, '<%= user.role %>')" 
                                                class="text-indigo-600 hover:text-indigo-900" title="Cambiar rol">
                                            <i class="fas fa-user-cog"></i>
                                        </button>
                                    <% } %>
                                    
                                    <!-- Toggle Active Status -->
                                    <% if (user.email !== user.email) { // This will be replaced with actual current user check %>
                                        <button onclick="toggleUserStatus(<%= user.id %>, '<%= user.displayName %>', <%= user.isActive %>)" 
                                                class="<%= user.isActive ? 'text-red-600 hover:text-red-900' : 'text-green-600 hover:text-green-900' %>" 
                                                title="<%= user.isActive ? 'Desactivar' : 'Activar' %> usuario">
                                            <i class="fas fa-<%= user.isActive ? 'user-slash' : 'user-check' %>"></i>
                                        </button>
                                    <% } %>
                                    
                                    <!-- View User Details -->
                                    <button onclick="viewUserDetails(<%= JSON.stringify(user) %>)" 
                                            class="text-blue-600 hover:text-blue-900" title="Ver detalles">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
            
            <% if (users.length === 0) { %>
                <div class="text-center py-12">
                    <div class="text-gray-400 text-6xl mb-4">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">No hay usuarios registrados</h3>
                    <p class="text-gray-600">El sistema está esperando el primer usuario administrador.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Change Role Modal -->
<div id="changeRoleModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="flex items-center justify-center h-full p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Cambiar Rol de Usuario</h3>
            </div>
            
            <div class="p-6">
                <input type="hidden" id="changeRoleUserId">
                
                <p class="text-gray-600 mb-4">
                    ¿Estás seguro de que quieres cambiar el rol de este usuario?
                </p>
                
                <div class="space-y-3">
                    <label class="flex items-center">
                        <input type="radio" name="newRole" value="admin" class="mr-3">
                        <div class="flex items-center">
                            <i class="fas fa-crown text-purple-600 mr-2"></i>
                            <span class="font-medium">Administrador</span>
                        </div>
                    </label>
                    <p class="text-sm text-gray-500 ml-8">Acceso completo al sistema y gestión de usuarios</p>
                    
                    <label class="flex items-center">
                        <input type="radio" name="newRole" value="user" class="mr-3">
                        <div class="flex items-center">
                            <i class="fas fa-user text-gray-600 mr-2"></i>
                            <span class="font-medium">Usuario</span>
                        </div>
                    </label>
                    <p class="text-sm text-gray-500 ml-8">Acceso limitado a sus propias instancias de WhatsApp</p>
                </div>
            </div>
            
            <div class="p-6 border-t border-gray-200 flex justify-end space-x-3">
                <button onclick="closeChangeRoleModal()" 
                        class="px-4 py-2 text-gray-600 hover:text-gray-800">
                    Cancelar
                </button>
                <button onclick="confirmRoleChange()" 
                        class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg">
                    Cambiar Rol
                </button>
            </div>
        </div>
    </div>
</div>

<!-- User Details Modal -->
<div id="userDetailsModal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
    <div class="flex items-center justify-center h-full p-4">
        <div class="bg-white rounded-lg shadow-xl max-w-lg w-full">
            <div class="p-6 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">Detalles del Usuario</h3>
            </div>
            
            <div class="p-6" id="userDetailsContent">
                <!-- Content will be filled by JavaScript -->
            </div>
            
            <div class="p-6 border-t border-gray-200 flex justify-end">
                <button onclick="closeUserDetailsModal()" 
                        class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    // Search functionality
    document.getElementById('searchUsers').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const userRows = document.querySelectorAll('.user-row');
        
        userRows.forEach(row => {
            const email = row.getAttribute('data-user-email');
            const name = row.getAttribute('data-user-name');
            
            if (email.includes(searchTerm) || name.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
    
    // Change role functions
    function changeUserRole(userId, currentRole) {
        document.getElementById('changeRoleUserId').value = userId;
        document.querySelector(`input[name="newRole"][value="${currentRole === 'admin' ? 'user' : 'admin'}"]`).checked = true;
        document.getElementById('changeRoleModal').classList.remove('hidden');
    }
    
    function closeChangeRoleModal() {
        document.getElementById('changeRoleModal').classList.add('hidden');
    }
    
    async function confirmRoleChange() {
        const userId = document.getElementById('changeRoleUserId').value;
        const newRole = document.querySelector('input[name="newRole"]:checked').value;
        
        try {
            const result = await apiCall(`/admin/users/${userId}/role`, {
                method: 'POST',
                body: JSON.stringify({ role: newRole })
            });
            
            showToast(result.message, 'success');
            closeChangeRoleModal();
            setTimeout(() => location.reload(), 1000);
            
        } catch (error) {
            console.error('Error changing user role:', error);
        }
    }
    
    // Toggle user status
    async function toggleUserStatus(userId, userName, isActive) {
        const action = isActive ? 'desactivar' : 'activar';
        
        if (!confirm(`¿Estás seguro de que quieres ${action} a ${userName}?`)) {
            return;
        }
        
        try {
            const result = await apiCall(`/admin/users/${userId}/toggle`, {
                method: 'POST'
            });
            
            showToast(result.message, 'success');
            setTimeout(() => location.reload(), 1000);
            
        } catch (error) {
            console.error('Error toggling user status:', error);
        }
    }
    
    // View user details
    function viewUserDetails(user) {
        const content = document.getElementById('userDetailsContent');
        
        content.innerHTML = `
            <div class="space-y-4">
                <div class="flex items-center">
                    <img src="${user.avatar || '/images/default-avatar.png'}" 
                         alt="Avatar" class="w-16 h-16 rounded-full">
                    <div class="ml-4">
                        <h4 class="text-lg font-semibold text-gray-900">${user.displayName}</h4>
                        <p class="text-gray-600">${user.email}</p>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm font-medium text-gray-600">Rol</p>
                        <p class="text-sm text-gray-900">${user.role === 'admin' ? 'Administrador' : 'Usuario'}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Estado</p>
                        <p class="text-sm text-gray-900">${user.isActive ? 'Activo' : 'Inactivo'}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Instancias</p>
                        <p class="text-sm text-gray-900">${user.whatsappInstances ? user.whatsappInstances.length : 0}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Registrado</p>
                        <p class="text-sm text-gray-900">${new Date(user.createdAt).toLocaleDateString('es-ES')}</p>
                    </div>
                </div>
                
                ${user.lastLogin ? `
                    <div>
                        <p class="text-sm font-medium text-gray-600">Último acceso</p>
                        <p class="text-sm text-gray-900">${new Date(user.lastLogin).toLocaleString('es-ES')}</p>
                    </div>
                ` : ''}
                
                ${user.whatsappInstances && user.whatsappInstances.length > 0 ? `
                    <div>
                        <p class="text-sm font-medium text-gray-600 mb-2">Instancias de WhatsApp</p>
                        <div class="space-y-2">
                            ${user.whatsappInstances.map(instance => `
                                <div class="flex items-center justify-between p-2 bg-gray-50 rounded">
                                    <span class="text-sm text-gray-900">${instance.numberName}</span>
                                    <span class="text-xs px-2 py-1 rounded ${
                                        instance.status === 'connected' ? 'bg-green-100 text-green-800' :
                                        instance.status === 'qr_pending' ? 'bg-yellow-100 text-yellow-800' :
                                        'bg-gray-100 text-gray-800'
                                    }">${instance.status}</span>
                                </div>
                            `).join('')}
                        </div>
                    </div>
                ` : ''}
            </div>
        `;
        
        document.getElementById('userDetailsModal').classList.remove('hidden');
    }
    
    function closeUserDetailsModal() {
        document.getElementById('userDetailsModal').classList.add('hidden');
    }
    
    // Close modals when clicking outside
    document.getElementById('changeRoleModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeChangeRoleModal();
        }
    });
    
    document.getElementById('userDetailsModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeUserDetailsModal();
        }
    });
</script>
