<%- contentFor('pageTitle', 'Funnel de Ventas') %>

<!-- Funnel Dashboard -->
<div class="h-full flex flex-col">
    
    <!-- Header Actions -->
    <div class="flex items-center justify-between p-6 border-b border-gray-200 bg-white">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Funnel de Ventas</h1>
            <p class="text-gray-600 mt-1">Gestiona el proceso de ventas con tableros Kanban</p>
        </div>
        
        <div class="flex items-center space-x-4">
            <!-- Instance Selector -->
            <select id="instanceSelector" class="border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-primary-500">
                <option value="">Selecciona una instancia</option>
                <% instances.forEach(instance => { %>
                    <option value="<%= instance.id %>"><%= instance.numberName %> (<%= instance.status %>)</option>
                <% }) %>
            </select>
            
            <!-- Create New Funnel Button -->
            <button id="createFunnelBtn" class="px-6 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors flex items-center space-x-2">
                <i class="fas fa-plus"></i>
                <span>Nuevo Funnel</span>
            </button>
        </div>
    </div>
    
    <!-- Funnel List -->
    <div class="flex-1 p-6 overflow-auto">
        <!-- Empty State -->
        <div id="emptyState" class="text-center py-16 hidden">
            <div class="w-24 h-24 bg-gradient-to-br from-green-100 to-blue-100 rounded-full flex items-center justify-center mx-auto mb-6">
                <i class="fas fa-filter text-3xl text-green-500"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Crea tu primer Funnel</h3>
            <p class="text-gray-500 mb-6">Organiza tus conversaciones en un proceso de ventas estructurado</p>
            <button onclick="document.getElementById('createFunnelBtn').click()" class="px-6 py-3 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">
                Empezar Ahora
            </button>
        </div>
        
        <!-- Loading State -->
        <div id="loadingState" class="text-center py-16 hidden">
            <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-green-500 mx-auto mb-4"></div>
            <p class="text-gray-500">Cargando funnels...</p>
        </div>
        
        <!-- Funnels Grid -->
        <div id="funnelsGrid" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            <!-- Funnel cards will be inserted here -->
        </div>
    </div>
</div>

<!-- Create Funnel Modal -->
<div id="createFunnelModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 hidden">
    <div class="bg-white rounded-lg p-6 w-96 max-w-md mx-4">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">Crear Nuevo Funnel</h3>
        
        <form id="createFunnelForm">
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Nombre del Funnel</label>
                <input type="text" id="funnelName" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-transparent">
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Descripci√≥n</label>
                <textarea id="funnelDescription" rows="3" class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 focus:border-transparent"></textarea>
            </div>
            
            <div class="mb-4">
                <label class="block text-sm font-medium text-gray-700 mb-2">Instancia de WhatsApp</label>
                <select id="funnelInstance" required class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500">
                    <option value="">Selecciona una instancia</option>
                    <% instances.forEach(instance => { %>
                        <option value="<%= instance.id %>"><%= instance.numberName %> (<%= instance.status %>)</option>
                    <% }) %>
                </select>
            </div>
            
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Color</label>
                <div class="flex space-x-2">
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-blue-500 ring-2 ring-offset-2 ring-blue-500" data-color="#3b82f6"></button>
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-green-500" data-color="#10b981"></button>
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-purple-500" data-color="#8b5cf6"></button>
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-red-500" data-color="#ef4444"></button>
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-yellow-500" data-color="#f59e0b"></button>
                    <button type="button" class="funnel-color w-8 h-8 rounded-full bg-pink-500" data-color="#ec4899"></button>
                </div>
            </div>
            
            <div class="flex justify-end space-x-3">
                <button type="button" id="cancelCreateFunnel" class="px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors">Cancelar</button>
                <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors">Crear Funnel</button>
            </div>
        </form>
    </div>
</div>

<!-- Scripts -->
<script src="/js/funnel-index.js"></script>
