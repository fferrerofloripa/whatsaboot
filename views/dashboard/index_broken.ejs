<script>
    // Close tutorial modal when clicking outside
    document.addEventListener('DOMContentLoaded', function() {
        const tutorialModal = document.getElementById('qrTutorialModal');
        if (tutorialModal) {
            tutorialModal.addEventListener('click', function(e) {
                if (e.target === this) {
                    closeTutorial();
                }
            });
        }
        
        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            if (!tutorialModal.classList.contains('hidden')) {
                if (e.key === 'Escape') {
                    closeTutorial();
                }
            }
        });
    });
</script>
