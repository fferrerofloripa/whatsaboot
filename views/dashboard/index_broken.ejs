<script>
    console.log('🚀 DEBUG: Dashboard JavaScript loaded successfully');
    
    // Create instance functions
    function createInstance() {
        console.log('🔍 DEBUG: createInstance() called');
        const modal = document.getElementById('createInstanceModal');
        console.log('🔍 DEBUG: Modal element:', modal);
        if (modal) {
            modal.classList.remove('hidden');
            console.log('✅ DEBUG: Modal should be visible now');
        } else {
            console.error('❌ DEBUG: Modal element not found!');
        }
    }
    
    // Make function global to ensure it's accessible
    window.createInstance = createInstance;
    
    function closeCreateInstanceModal() {
        document.getElementById('createInstanceModal').classList.add('hidden');
        document.getElementById('createInstanceForm').reset();
    }
    
    // Test message functions
    function testMessage(instanceId) {
        document.getElementById('testInstanceId').value = instanceId;
        document.getElementById('testMessageModal').classList.remove('hidden');
    }
    
    function closeTestMessageModal() {
        document.getElementById('testMessageModal').classList.add('hidden');
        document.getElementById('testMessageForm').reset();
    }
    
    // Instance actions
    async function connectInstance(instanceId) {
        try {
            const result = await apiCall(`/api/bot/instances/${instanceId}/connect`, {
                method: 'POST'
            });
            
            showToast(result.message, 'success');
            setTimeout(() => location.reload(), 2000);
            
        } catch (error) {
            console.error('Error connecting instance:', error);
        }
    }
    
    async function disconnectInstance(instanceId) {
        if (!confirm('¿Estás seguro de que quieres desconectar esta instancia?')) {
            return;
        }
        
        try {
            const result = await apiCall(`/api/bot/instances/${instanceId}/disconnect`, {
                method: 'POST'
            });
            
            showToast(result.message, 'success');
            setTimeout(() => location.reload(), 1000);
            
        } catch (error) {
            console.error('Error disconnecting instance:', error);
        }
    }
    
    // Make all functions global
    window.closeCreateInstanceModal = closeCreateInstanceModal;
    window.testMessage = testMessage;
    window.closeTestMessageModal = closeTestMessageModal;
    window.connectInstance = connectInstance;
    window.disconnectInstance = disconnectInstance;
    
    // Test message functions
    function testMessage(instanceId) {
        document.getElementById('testInstanceId').value = instanceId;
        document.getElementById('testMessageModal').classList.remove('hidden');
    }
    
    function closeTestMessageModal() {
        document.getElementById('testMessageModal').classList.add('hidden');
        document.getElementById('testMessageForm').reset();
    }
    
    // Form handlers
    document.getElementById('createInstanceForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        console.log('🔍 DEBUG: Form submitted');
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        console.log('🔍 DEBUG: Form data:', data);
        
        try {
            console.log('🔍 DEBUG: Making API call to /api/bot/instances');
            const result = await apiCall('/api/bot/instances', {
                method: 'POST',
                body: JSON.stringify(data)
            });
            
            console.log('✅ DEBUG: API call successful:', result);
            showToast(result.message, 'success');
            closeCreateInstanceModal();
            setTimeout(() => location.reload(), 1000);
            
        } catch (error) {
            console.error('❌ DEBUG: Error creating instance:', error);
        }
    });
    
    document.getElementById('testMessageForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const formData = new FormData(this);
        const data = Object.fromEntries(formData);
        const instanceId = data.instanceId;
        
        try {
            const result = await apiCall(`/api/bot/instances/${instanceId}/send`, {
                method: 'POST',
                body: JSON.stringify({
                    to: data.to,
                    message: data.message
                })
            });
            
            showToast(result.message, 'success');
            closeTestMessageModal();
            
        } catch (error) {
            console.error('Error sending test message:', error);
        }
    });
    
    // Instance actions
    async function connectInstance(instanceId) {
        try {
            const result = await apiCall(`/api/bot/instances/${instanceId}/connect`, {
                method: 'POST'
            });
            
            showToast(result.message, 'success');
            setTimeout(() => location.reload(), 2000);
            
        } catch (error) {
            console.error('Error connecting instance:', error);
        }
    }
    
    async function disconnectInstance(instanceId) {
        if (!confirm('¿Estás seguro de que quieres desconectar esta instancia?')) {
            return;
        }
        
        try {
            const result = await apiCall(`/api/bot/instances/${instanceId}/disconnect`, {
                method: 'POST'
            });
            
            showToast(result.message, 'success');
            setTimeout(() => location.reload(), 1000);
            
        } catch (error) {
            console.error('Error disconnecting instance:', error);
        }
    }
    
    // Socket.IO handlers for real-time updates
    window.updateQRCode = function(qrCode) {
        // Find QR code containers and update them
        const qrImages = document.querySelectorAll('img[alt="QR Code"]');
        qrImages.forEach(img => {
            img.src = qrCode;
        });
    };
    
    window.updateInstanceStatus = function(instanceId, status, phoneNumber) {
        // This would be implemented to update the UI in real-time
        // For now, we'll just reload the page
        setTimeout(() => location.reload(), 1000);
    };
    
    // Close modals when clicking outside
    document.getElementById('createInstanceModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeCreateInstanceModal();
        }
    });
    
    document.getElementById('testMessageModal').addEventListener('click', function(e) {
        if (e.target === this) {
            closeTestMessageModal();
        }
    });
    
    // QR Tutorial Functions
    let currentStep = 0;
    let animationTimeout;
    
    // Start QR Tutorial
    function startQRTutorial() {
        document.getElementById('qrTutorialModal').classList.remove('hidden');
        document.body.style.overflow = 'hidden';
    }
    
    // Close Tutorial
    function closeTutorial() {
        document.getElementById('qrTutorialModal').classList.add('hidden');
        document.body.style.overflow = '';
        resetTutorial();
    }
    
    // Start Animation
    function startAnimation() {
        resetTutorial();
        currentStep = 0;
        
        // Add glow effect to QR code
        const qrImage = document.getElementById('qr-image');
        if (qrImage) {
            qrImage.parentElement.classList.add('qr-glow');
        }
        
        animateStep();
    }
    
    // Animate Steps
    function animateStep() {
        if (currentStep >= 5) {
            // Show success message
            document.getElementById('tutorialSuccess').classList.remove('hidden');
            document.getElementById('tutorialSuccess').scrollIntoView({ 
                behavior: 'smooth', 
                block: 'nearest' 
            });
            return;
        }
        
        const steps = document.querySelectorAll('.tutorial-step');
        const currentStepElement = steps[currentStep];
        
        // Highlight current step
        currentStepElement.classList.add('active');
        
        // Scroll to current step
        currentStepElement.scrollIntoView({ 
            behavior: 'smooth', 
            block: 'center' 
        });
        
        // Mark previous steps as completed
        for (let i = 0; i < currentStep; i++) {
            steps[i].classList.remove('active');
            steps[i].classList.add('completed');
        }
        
        // Move to next step after 2.5 seconds
        animationTimeout = setTimeout(() => {
            currentStepElement.classList.remove('active');
            currentStepElement.classList.add('completed');
            currentStep++;
            animateStep();
        }, 2500);
    }
    
    // Reset Tutorial
    function resetTutorial() {
        clearTimeout(animationTimeout);
        currentStep = 0;
        
        // Reset all steps
        const steps = document.querySelectorAll('.tutorial-step');
        steps.forEach(step => {
            step.classList.remove('active', 'completed');
        });
        
        // Hide success message
        const successEl = document.getElementById('tutorialSuccess');
        if (successEl) {
            successEl.classList.add('hidden');
        }
        
        // Remove QR glow
        const qrImage = document.getElementById('qr-image');
        if (qrImage) {
            qrImage.parentElement.classList.remove('qr-glow');
        }
    }
</script>

